<!-- Game Manifest -->
<game>
	<name>minecraft</name>

	<actions>
		<!-- Make Game Repository -->
		<repository>
			<!-- Download required files -->
			<get>https://s3.amazonaws.com/Minecraft.Download/versions/1.7.4/minecraft_server.1.7.4.jar</get>
			<get>http://dl.bukkit.org/latest-rb/craftbukkit.jar</get>
			<!-- Additionnal Actions -->
			<!-- Nothing to do! -->
		</repository>

		<!-- Install Game Server From Game Repository -->
		<installgame>
			<!-- Copy Game Server Files -->
			<rsync_c></rsync_c>
			<chmodx>minecraft_server.1.7.4.jar</chmodx>
		</installgame>

		<!-- Update Game Server From Game Repository -->
		<updategame>
			<!-- Update Game Server Files -->
			<rsync_u>server.properties</rsync_u>
			<chmodx>minecraft_server.1.7.4.jar</chmodx>
		</updategame>
	</actions>
</game>
